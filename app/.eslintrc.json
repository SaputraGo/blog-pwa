{
  "extends": ["eslint:recommended", "google"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "plugins": [
    "html"
  ],
  "settings": {
    "html/indent": "+2",
    "html/report-bad-indent": "error"
  },
  "rules": {
    "arrow-parens": 0,
    "no-confusing-arrow": 2,
    "require-jsdoc": 0,
    "no-console": 0,
    "new-cap": 0,
    "no-undef": 0
  },
  "globals": {
    "Polymer": false,
    "customElements": false,
    "ga": false
  }
}
